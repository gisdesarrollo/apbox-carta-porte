@model API.Models.Cargas.CargasCfdisModel

@{
    ViewBag.Title = "Carga de Gastos de Proveedores";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <div class="title">@ViewBag.Title</div>
                    </div>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm("CargaGastosProveedores", "OperacionesCfdisRecibidos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form">
                        @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

                        <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(model => model.DepartamentoId, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("DepartamentoId", null, "Favor de hacer su selección", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DepartamentoId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(model => model.CentroCostoId, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("CentroCostoId", null, "Favor de hacer su selección", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CentroCostoId, "", new { @class = "text-danger" })
                        </div>

                        <div class="clearfix"></div>

                        <div class="sub-title">
                            <span class="fa fa-bars text-muted"></span> Referencia
                        </div>

                        <hr />

                        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
                            @Html.LabelFor(model => model.Referencia1, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Referencia1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Referencia1, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
                            @Html.LabelFor(model => model.Referencia2, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Referencia2, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Referencia2, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
                            @Html.LabelFor(model => model.Referencia3, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Referencia3, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Referencia3, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(model => model.Referencia4, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Referencia4, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Referencia4, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(model => model.Referencia5, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Referencia5, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Referencia5, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <input type="file" class="btn btn-primary" accept=".xml, .pdf" />
                        </div>

                        <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-3 pull-right">
                            <button type="submit" class="btn btn-success">Subir</button>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>