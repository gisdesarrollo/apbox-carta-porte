@model API.Operaciones.ComplementoCartaPorte.ContenedorC


@using (Html.BeginCollectionItem("Mercancias.TransporteFerroviario.Carro.ContenedoresC"))
{
    @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

    <div class="content-box mrg20L mrg20R">
        <h3 class="content-box-header bg-default">
            <i class="glyph-icon icon-money"></i>
            Contenedores
            <div class="header-buttons-separator">
                <a href="#" class="icon-separator" onclick="removeDetalleTFContenedor(this)">
                    <i class="glyph-icon icon-times font-red"></i>
                </a>
            </div>
        </h3>
        <div class="content-box-wrapper TFContenedor">
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.Contenedor_Id)<br />
                <p id="ContenedorId">@Model.Contenedor_Id</p>
                @Html.HiddenFor(model => model.Contenedor_Id)
            </div>
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.PesoContenedorVacio)<br />
               <p id="PesoCVacio">@Model.PesoContenedorVacio</p>
                @Html.HiddenFor(model => model.PesoContenedorVacio)
            </div>
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.PesoNetoMercancia)<br />
                <p id="PesoNMercancia">@Model.PesoNetoMercancia</p>
                @Html.HiddenFor(model => model.PesoNetoMercancia)
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
}

