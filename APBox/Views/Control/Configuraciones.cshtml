@model API.Models.Control.ConfiguracionesModel

@{
    ViewBag.Title = "Configuraciones";
}

<h2>Configuraciones</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        @for (var i = 0; i < Model.Configuraciones.Count(); i++)
                        {
                            <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-3">
                                @Html.HiddenFor(model => model.Configuraciones[i].Id)
                                @Html.HiddenFor(model => model.Configuraciones[i].Concepto)

                                @Html.DisplayFor(model => model.Configuraciones[i].Concepto)
                                @Html.EditorFor(model => model.Configuraciones[i].Valor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Configuraciones[i].Valor, "", new { @class = "text-danger" })
                            </div>
                        }
                    </div>

                    <div class="clearfix"></div>
                    <hr />
                    <div class="form-group pull-right">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>