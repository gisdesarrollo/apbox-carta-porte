@model IEnumerable<API.Operaciones.OperacionesProveedores.SolicitudAcceso>

@{
    ViewBag.Title = "Solicitudes";
}

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <div class="title">@ViewBag.Title</div>
                </div>
            </div>
            <div class="card-body">
                <table class="dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RazonSocial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rfc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RazonSocial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rfc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="fa fa-cog"></span> Opciones
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li>@Html.ActionLink("Autorizar", "Operar", new { id = item.Id, autorizar = true }, new { @class = "edit" })</li>
                                            <li>@Html.ActionLink("Rechazar", "Operar", new { id = item.Id, autorizar = false }, new { @class = "details" })</li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>