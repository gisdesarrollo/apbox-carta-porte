@model IEnumerable<API.Catalogos.Proveedor>

@{
    ViewBag.Title = "Proveedores";
}

<div id="page-title">
    <h2>Proveedores</h2>
</div>

<div class="panel">
    <div class="panel-body">
        <button onclick="location.href='@Url.Action("Create", "Proveedores")';return false;" type="button" class="btn btn-primary"><i class="fa fa-plus"></i> Crear Proveedor</button>
        <hr />
        <div class="col-lg-12">
            <table class="table dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RazonSocial)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RazonSocial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-edit fa-2x", @title = "Edit" })
                                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "fa fa-info-circle fa-2x", @title = "Detalles" })
                                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "fa fa-trash fa-2x", @title = "Borrar" })
                            </td>
                        </tr>
                        }
                </tbody>

            </table>
        </div>
    </div>
</div>